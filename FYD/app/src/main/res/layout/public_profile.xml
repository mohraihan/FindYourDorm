<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#012B31">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="#012B31"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_home_black_24dp"
                android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">


            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="68dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    app:srcCompat="@drawable/img1" />
                <androidx.cardview.widget.CardView
                    android:layout_width="114dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="#54C1EB"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0DAA07"
                        android:ems="10"
                        android:layout_gravity="center"
                        android:text="Contact"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="20dp"
                    android:text="Available"
                    android:textAlignment="center"
                    android:textColor="#00FF0C"
                    tools:ignore="RtlCompat" />
            </TableRow>


            <TextView
                android:id="@+id/head1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#444"
                android:fontFamily="@font/coda"
                android:gravity="center_horizontal"
                android:text="Property Details"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Place :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/place"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="place" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Size :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/size"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="size" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Bed Rooms :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/bedrooms"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="bedrooms" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Bath Rooms :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/bathrooms"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="bathrooms" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rent per month :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/rent"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="rent per month" />
            </TableRow>

            <TextView
                android:id="@+id/head2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#444"
                android:fontFamily="@font/coda"
                android:gravity="center_horizontal"
                android:text="Other features"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/f1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="feature1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/f2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="feature2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/f3"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="feature3"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/head3"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#444"
                android:fontFamily="@font/coda"
                android:gravity="center_horizontal"
                android:text="Owner details"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Name :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/owner"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="name" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Address :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="address" />
            </TableRow>

            <TableRow
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#333">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Contact number :-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="number" />
            </TableRow>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>