<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220606">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="234dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="291dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img1"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="#00D4FAF2"
        android:ems="10"
        android:text="Edit your Profile"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#FC8585"
        android:fontFamily="@font/coda"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="#450303"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="STATUS :-"/>

            <RadioGroup
                android:id="@+id/status"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="#450303"
                android:layout_margin="10dp"
                >

                <RadioButton
                    android:id="@+id/available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available" />
                <RadioButton
                    android:id="@+id/unavailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unavailable" />
            </RadioGroup>
            <EditText
                android:id="@+id/fullname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Full name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />
            <EditText
                android:id="@+id/editText4"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Address"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Mobile Number"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Place of property"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Property size in sqrft"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Number of bedrooms"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Number of bathrooms"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Enter Rent per month"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Other features"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Other features"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />

            <EditText
                android:id="@+id/editText13"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#5E0101"
                android:ems="10"
                android:hint="Other features"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#eee" />
            <androidx.cardview.widget.CardView
                android:layout_width="114dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="#EB5454"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#EB5454"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:text="Save"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>




</RelativeLayout >